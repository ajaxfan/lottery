<?xml version="1.0" encoding="UTF-8"?>
<configuration>
	<!-- Define Write To Console -->
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<layout class="ch.qos.logback.classic.PatternLayout">
			<Pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</Pattern>
		</layout>
	</appender>
	<!-- Define Write To File -->
	<appender name="FILE" class="ch.qos.logback.core.FileAppender">
		<file>lotter_error.log</file>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<!-- daily rollover -->
			<fileNamePattern>lotter.%d{yyyy-MM-dd}.log</fileNamePattern>
			<!-- keep 5 days' worth of history capped at 1GB total size -->
			<maxHistory>5</maxHistory>
			<totalSizeCap>1GB</totalSizeCap>
		</rollingPolicy>
		<encoder>
			<pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %logger{36} - %msg%n</pattern>
		</encoder>
	</appender>
	<!-- Root Log rule -->
	<root level="ERROR">
		<appender-ref ref="FILE" />
	</root>
	<!-- Customize Lotter Rule -->
	<logger name="com.xpyz.lotterdata" level="INFO"/>
</configuration>